{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Wasla",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://**", "https://**"]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "title": "Wasla"
    },
    "bundle": {
      "active": true,
      "targets": ["msi", "nsis", "updater"],
      "identifier": "com.wasla.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://tunimove.vercel.app/api/updater/wasla"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE3NjQ1QzgxQUIzQTg3OEMKUldTTWh6cXJnVnhrRnkrWXVMR0R2S0hqQnY5UUxYODh6ZzJlRlpuRG0rN05LMHliZk1pQit1UVYK"
    },
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline';"
    },
    "windows": [
      {
        "fullscreen": true,
        "resizable": true,
        "title": "Wasla",
        "height": 1080,
        "width": 1920,
        "center": true,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "decorations": true,
        "visible": true,
        "focus": true
      }
    ]
  }
}